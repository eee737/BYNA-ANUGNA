#include<iostream.h>
int main()
{
  float X,p,total;
  cout<<"enter the first amount";
  cin>>X;
  cout<<" enter the discount";
  cin>>p;
  total=X;
  if(( X<=10000&& X>=0)&&(p<=100&&p>=1))
  { 
     for(int i=0;X==0;i++)
    {
       
      X= X*(1-(p/100));
       total= total+ X

     }
    }
   Cout<<" the amount required to get free is";
Cout<<total;
Return 0;
}
  
